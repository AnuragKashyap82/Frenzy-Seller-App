<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/shopNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Shop Name All Activity"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ordersWishlistLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:weightSum="2"
                android:layout_below="@id/shopNameTv"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/newOrdersTv"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rect_01"
                    android:gravity="center"
                    android:text="New Orders"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/packedOrdersTv"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rect_01"
                    android:gravity="center"
                    android:text="Packed Orders"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/couponsLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:weightSum="2"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/ordersWishlistLl"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cancelledTv"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rect_01"
                    android:gravity="center"
                    android:text="Cancelled Orders"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/shippedOrdersTv"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rect_01"
                    android:gravity="center"
                    android:text="Shipped Orders"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/deliveredLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:weightSum="2"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/couponsLl"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/outFotDeliveryTv"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rect_01"
                    android:gravity="center"
                    android:text="Out For Delivery"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/deliveredTv"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rect_01"
                    android:gravity="center"
                    android:text="Delivered Orders"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/returnLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:weightSum="2"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/deliveredLl"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/returnTv"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rect_01"
                    android:gravity="center"
                    android:text="Returned Orders"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/refundTv"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rect_01"
                    android:gravity="center"
                    android:text="Refunded Orders"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />


            </LinearLayout>


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray01"
                android:layout_below="@id/returnLl"/>

            <TextView
                android:id="@+id/shopNameTv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/view"
                android:text="Shop Name All Products"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sellerAllProductsRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shopNameTv2"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/row_grid_item" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_circle_01"
        android:padding="5dp"
        android:theme="@style/Widget.AppCompat.ProgressBar"
        android:visibility="gone"/>

</RelativeLayout>